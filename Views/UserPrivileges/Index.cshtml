@model List<FishMarketing.ViewModel.UserPrivilegesVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">User Privileges</h5>    @*<a asp-action="Create">Add Box Mark</a>*@

    <form asp-action="Create">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

        <table class="table table-bordered border-primary">
            <thead>
                <tr>
                    <th scope="col">Sn</th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model[0].MenuName)
                    </th>
                    <th scope="col">View</th>
                    <th scope="col">Create</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <th scope="row">@(++sn)</th>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].MenuName)
                            @Html.HiddenFor(modelItem => Model[i].MenuId)
                            @Html.HiddenFor(modelItem => Model[i].LoginId)
                            @Html.HiddenFor(modelItem => Model[i].UserPrivilegeId)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].ViewAccess)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].CreateAccess)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].EditAccess)
                        </td>
                        <td>
                            @Html.EditorFor(modelItem => Model[i].DeleteAccess)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
    </div>
</div>

